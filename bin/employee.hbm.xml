<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping> 
	<class name="com.tp2.beans.Employee" table="Employee">  
		<id column="idPerson" name="id" type="int">   
			<generator class="native"/>  
		</id>  
		<property column="firstName" name="firstName"> </property>
		<property column="lastName" name="lastName"> </property> 
	</class> 
</hibernate-mapping>
